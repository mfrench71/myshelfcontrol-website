{
  "name": "bookassembly-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:quiet": "next build 2>&1 | grep -E '^(Route|✓|✗|Error)' | head -10 || echo '✓ Build complete'",
    "start": "next start",
    "lint": "eslint",
    "lint:quiet": "eslint --quiet && echo '✓ Lint passed'",
    "check:unused": "knip",
    "check:unused:quiet": "knip --no-progress && echo '✓ No unused exports'",
    "check:circular": "madge --circular --extensions ts,tsx src/",
    "check:circular:quiet": "madge --circular --extensions ts,tsx src/ >/dev/null && echo '✓ No circular deps'",
    "analyze": "ANALYZE=true next build",
    "test": "vitest run",
    "test:quiet": "vitest run --reporter=dot >/dev/null 2>&1 && echo '✓ Tests passed'",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "husky"
  },
  "dependencies": {
    "@ericblade/quagga2": "^1.12.1",
    "firebase": "^12.7.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.6.0",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "knip": "^5.79.0",
    "madge": "^8.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
